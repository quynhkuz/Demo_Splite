<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertDataActivity">


    <TextView
        android:id="@+id/tv_sbd"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="So bao danh"
        />

    <EditText
        android:id="@+id/edt_sbd"
        android:gravity="right"
        app:layout_constraintTop_toBottomOf="@id/tv_sbd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="hoten"/>

    <TextView
        android:id="@+id/tv_hoten"
        app:layout_constraintTop_toBottomOf="@id/edt_sbd"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ho Ten"
        />

    <EditText
        android:id="@+id/edt_hoten"
        android:gravity="right"
        app:layout_constraintTop_toBottomOf="@id/tv_hoten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="so bao danh"/>

    <TextView
        android:id="@+id/tv_diemtoan"
        app:layout_constraintTop_toBottomOf="@id/edt_hoten"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diem Toan"
        />

    <EditText
        android:id="@+id/edt_diemtoan"
        android:gravity="right"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/tv_diemtoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Diem Toan"/>


    <TextView
        android:id="@+id/tv_diemly"
        app:layout_constraintTop_toBottomOf="@id/edt_diemtoan"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diem Ly"
        />

    <EditText
        android:id="@+id/edt_diemly"
        android:inputType="number"
        android:gravity="right"
        app:layout_constraintTop_toBottomOf="@id/tv_diemly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Diem Ly"/>


    <TextView
        android:id="@+id/tv_diemhoa"
        app:layout_constraintTop_toBottomOf="@id/edt_diemly"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diem Hoa"
        />

    <EditText
        android:id="@+id/edt_diemhoa"
        android:gravity="right"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@id/tv_diemhoa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Diem Hoa"/>


    <Button
        app:layout_constraintTop_toTopOf="@id/btn_back"
        app:layout_constraintRight_toLeftOf="@id/btn_back"
        android:layout_marginRight="35dp"
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sua"/>

    <Button
        android:layout_marginBottom="50dp"
        android:layout_marginRight="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quay ve"/>

</androidx.constraintlayout.widget.ConstraintLayout>