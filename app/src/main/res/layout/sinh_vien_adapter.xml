<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/v_sum"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_sbd"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toLeftOf="@id/tv_diem"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="sdb"/>

    <TextView
        android:id="@+id/tv_ten"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toLeftOf="@id/tv_diem"
        app:layout_constraintTop_toBottomOf="@id/tv_sbd"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ten"/>


    <TextView
        android:id="@+id/tv_diem"
        android:layout_marginRight="50dp"
        app:layout_constraintTop_toTopOf="@id/tv_sbd"
        app:layout_constraintBottom_toBottomOf="@id/tv_ten"
        app:layout_constraintTop_toBottomOf="@id/tv_sbd"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="diem"/>


    <View
        app:layout_constraintTop_toBottomOf="@+id/tv_ten"
        android:layout_marginTop="3sp"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>